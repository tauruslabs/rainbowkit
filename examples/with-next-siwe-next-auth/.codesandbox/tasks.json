{
  "$schema": "https://codesandbox.io/schemas/tasks.json",
  "setupTasks": [
    "yarn add @merkletrade/rainbowkit@latest @merkletrade/rainbowkit-siwe-next-auth@latest",
    "yarn build"
  ],
  "tasks": {
    "install-dependencies": {
      "name": "Install Dependencies",
      "command": "yarn add @merkletrade/rainbowkit@latest @merkletrade/rainbowkit-siwe-next-auth@latest"
    },
    "start-app": {
      "name": "Run Dev Server",
      "command": "yarn dev",
      "runAtStart": true,
      "preview": {
        "port": 3000
      }
    }
  }
}